<!--signin.wxml-->

<view class='container' id='appIntro'>
  <image id='appIcon' src='../../resources/images/appIcon.jpeg'></image>
  <text id='appName'>Party Animal</text>
</view>

<view class='container' id='form'>
  <textarea id='studentID' placeholder='学号'></textarea>
  <textarea id='password1' placeholder='密码'></textarea>
  <textarea id='password2' hidden="{{isSignIn}}" placeholder='确认密码'></textarea>
  <textarea id='validationCode' hidden="{{isSignIn}}" placeholder='验证码'></textarea>
  <button type='primary' form-type='submit' id='signIn' hidden="{{!isSignIn}}">登录</button>
  <button type='primary' form-type='submit' id='signUp' hidden="{{isSignIn}}">注册</button>
  <text id='inToOn' bindtap='switchSign' hidden="{{!isSignIn}}">没有账号？立即注册！</text>
  <text id='onToIn' bindtap='switchSign' hidden="{{isSignIn}}">已有账号？立即登录！</text>
</view>