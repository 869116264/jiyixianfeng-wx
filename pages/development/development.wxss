/* pages/development/development.wxss */

.flex-wrp {
  display: flex;
  flex-direction: row;
  background: #fff;
}

.user_content {
  padding: 35rpx 40rpx;
}

.user_avatar {
  width: 150rpx;
  height: 150rpx;
  margin-right: 35rpx;
}

.text_block {
  display: flex;
  flex-direction: column;
}

.user_name {
  display: block;
  color: #111;
  font-size: 50rpx;
}

.user_stage {
  display: block;
  color: #4a4a4a;
  font-size: 24rpx;
}

.user_next {
  display: block;
  color: #4a4a4a;
  font-size: 30rpx;
}

.text_next {
  color: #ff6260;
}

.user_stage_icons {
  padding: 26rpx 60rpx 20rpx 60rpx;
  background: #f9f4ec;
}

.icon_stage {
  display: flex;
  flex-direction: column;
  width: 54rpx;
  height: 54rpx;
}

.user_stage_text {
  background: #f9f4ec;
  padding-bottom: 26rpx;
}

.text_stage_on {
  color: #ffbe00;
  font-size: 24rpx;
}

.text_stage_off {
  color: #888;
  font-size: 24rpx;
}

.line_on {
  margin-top: 27rpx;
  width: 131rpx;
  height: 3rpx;
  background: #ffbe00;
}

.line_off {
  margin-top: 27rpx;
  width: 131rpx;
  height: 3rpx;
  background: #888;
}

