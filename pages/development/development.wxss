.act_item {
  margin:20rpx;
  border-radius: 8rpx;
  padding: 32rpx 0 28rpx 30rpx;
}

.act_type_icon {
  margin-top: 23rpx;
  margin-right: 30rpx;
  width: 100rpx;
  height: 100rpx;
}

.act_name {
  display: block;
  color: #4a4a4a;
  font-size: 36rpx;
}

.act_time_location {
  display: block;
  color: #888888;
  font-size: 24rpx;
}

.act_credit {
  display: block;
  color: #ff6260;
  font-size: 24rpx;
}