.summary_item {
  width: 120rpx;
  align-items: center;
  display: flex;
  flex-direction: column;
  margin: 20rpx auto 20rpx auto;
}

.summary_icon {
  width: 44rpx;
  height: 44rpx;
}

.summary_text {
  margin-top: 10rpx;
  color: #4a4a4a;
  font-size: 30rpx;
}

